{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": [
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client",
      "vuetify"
    ],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.d.ts"]
}